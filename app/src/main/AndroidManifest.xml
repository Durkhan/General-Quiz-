<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.general.quizapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizApp">
        <activity android:name=".ProfilActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.QuizApps"></activity>
        <activity android:name=".Instruction" />
        <activity
            android:name=".LeaderboardActivity"
            android:theme="@style/Theme.QuizApps" />
        <activity
            android:name=".StatisticActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.QuizAppsStatic" />
        <activity
            android:name=".ResultActivty"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.QuizApps" />
        <activity
            android:name=".logun.RegisterActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".logun.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".QuestionSActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.QuizApps" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.QuizApps" />
    </application>

</manifest>