<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.QuizApps"
    android:background="@drawable/resultbackground"
    android:weightSum="2"
    tools:context=".LeaderboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/backpress"
                android:src="@drawable/ic_baseline_keyboard_backspace_24"
                android:background="@android:color/transparent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="10dp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:cardCornerRadius="33dp"
                    android:layout_gravity="center"

                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/profilleader"
                        android:textSize="20sp"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
   >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginRight="30dp"
       android:weightSum="3"
       android:gravity="bottom"
       android:layout_marginLeft="30dp"
       android:orientation="horizontal">
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_weight="1">
           <androidx.cardview.widget.CardView
               android:layout_width="45dp"
               android:layout_height="45dp"
               app:cardCornerRadius="33dp"
               android:layout_gravity="center"

               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textColor="@color/white"
                   android:gravity="center"
                   android:id="@+id/leader2"
                   android:textSize="20sp"
                   />
           </androidx.cardview.widget.CardView>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:textColor="@color/white"
               android:gravity="center"
               android:layout_marginTop="10dp"
               android:id="@+id/leaderusrname2"
               android:textSize="15sp"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="180dp"
               android:background="@drawable/leader3background"
               android:layout_gravity="bottom"
               android:gravity="center"
               >
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/white"
                       android:text="2"
                       android:layout_gravity="center"
                       android:textAlignment="center"
                       android:textStyle="bold"
                       android:textSize="60sp"
                       />
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginTop="10dp"
                       android:layout_height="wrap_content">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/white"
                           android:id="@+id/leaderscore2"
                           android:textSize="20sp"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/white"
                           android:textSize="8sp"
                           android:text="pt"
                           />
                   </LinearLayout>

               </LinearLayout>
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_weight="1">
           <androidx.cardview.widget.CardView
               android:layout_width="45dp"
               android:layout_height="45dp"
               app:cardCornerRadius="33dp"
               android:layout_gravity="center"

               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textColor="@color/white"
                   android:gravity="center"
                   android:id="@+id/leader1"
                   android:textSize="20sp"
                   />
           </androidx.cardview.widget.CardView>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:textColor="@color/white"
               android:gravity="center"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="20dp"
               android:id="@+id/leaderusrname1"
               android:textSize="15sp"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:layout_gravity="bottom"
               android:background="#BF000000"
               android:gravity="center"
               >
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/white"
                       android:text="1"
                       android:layout_gravity="center"
                       android:textAlignment="center"
                       android:textStyle="bold"
                       android:textSize="75sp"
                       />
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginTop="10dp"
                       android:layout_height="wrap_content">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/white"
                           android:id="@+id/leaderscore1"
                           android:textSize="20sp"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/white"
                           android:textSize="8sp"
                           android:text="pt"
                           />
                   </LinearLayout>

               </LinearLayout>
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_weight="1">
           <androidx.cardview.widget.CardView
               android:layout_width="45dp"
               android:layout_height="45dp"
               app:cardCornerRadius="33dp"
               android:layout_gravity="center"

               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textColor="@color/white"
                   android:gravity="center"
                   android:id="@+id/leader3"
                   android:textSize="20sp"
                   />
           </androidx.cardview.widget.CardView>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:textColor="@color/white"
               android:gravity="center"
               android:layout_marginTop="10dp"
               android:id="@+id/leaderusrname3"
               android:textSize="15sp"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="160dp"
               android:background="@drawable/leader2bacground"
               android:layout_gravity="bottom"
               android:gravity="center"
               >
                <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/white"
                       android:text="3"
                       android:layout_gravity="center"
                       android:textAlignment="center"
                       android:textStyle="bold"
                       android:textSize="60sp"
                       />
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginTop="10dp"
                       android:layout_height="wrap_content">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/white"
                           android:id="@+id/leaderscore3"
                           android:textSize="20sp"
                           />

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textColor="@color/white"
                           android:text="pt"
                           android:textSize="8sp" />
                   </LinearLayout>

               </LinearLayout>
           </LinearLayout>
       </LinearLayout>
   </LinearLayout>

</LinearLayout>
</LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.94"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/white"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_marginRight="10dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/leaders"/>




            </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>