<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="15sp"
    app:cardElevation="5dp"
    android:backgroundTint="@android:color/transparent"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/backgroundiffulcuty">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:layout_marginTop="5dp"
            android:weightSum="3.4"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                android:layout_weight="1.2"
                android:clickable="true"
                android:id="@+id/withtime"
                app:cardElevation="5dp"
                android:backgroundTint="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:background="@drawable/selectedbackground"
                        android:textAlignment="center"
                        android:visibility="visible"
                        android:textSize="10sp"
                        android:id="@+id/selectwithtime"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:layout_gravity="center"
                        android:text="@string/select"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple_500"
                        android:background="#fff"
                        android:paddingBottom="30dp"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:paddingTop="25dp"
                        android:text="@string/withtime"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.4"></View>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="15dp"
                android:clickable="true"
                android:layout_weight="1.2"
                android:id="@+id/withouttime"
                app:cardElevation="5dp"
                android:backgroundTint="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:background="@drawable/selectedbackground"
                        android:textSize="10sp"
                        android:paddingTop="3dp"
                        android:id="@+id/selectnotime"
                        android:paddingBottom="3dp"
                        android:textAlignment="center"
                        android:visibility="invisible"
                        android:layout_gravity="center"
                        android:text="@string/select"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple_500"
                        android:background="#fff"
                        android:paddingBottom="30dp"
                        android:layout_gravity="center"
                        android:paddingTop="25dp"
                        android:textSize="15sp"
                        android:text="@string/withouttime"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/difficulty"
                android:textSize="15sp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/easy"
                android:visibility="visible"
                android:background="@drawable/linaereditbackground"
                android:orientation="horizontal">




                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/selected"
                    android:paddingBottom="10dp"
                    android:id="@+id/esayimage"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:visibility="visible"
                    android:paddingRight="10dp"
                    android:background="@drawable/confirmiconbackground"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/easy"
                        android:textSize="15sp"
                        android:paddingRight="30dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:id="@+id/meduim"
                android:visibility="visible"
                android:background="@drawable/linaereditbackground"
                android:orientation="horizontal">




                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/selected"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/imagemedium"
                    android:visibility="invisible"
                    android:paddingRight="10dp"
                    android:background="@drawable/confirmiconbackground"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/medium"
                        android:textSize="15sp"
                        android:paddingRight="30dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hard"
                android:visibility="visible"
                android:layout_marginTop="12dp"
                android:background="@drawable/linaereditbackground"
                android:orientation="horizontal">




                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/selected"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:id="@+id/hardimage"
                    android:paddingLeft="10dp"
                    android:visibility="invisible"
                    android:paddingRight="10dp"
                    android:background="@drawable/confirmiconbackground"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hard"
                        android:textSize="15sp"
                        android:paddingRight="30dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:id="@+id/time"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:textSize="15sp"
                android:paddingBottom="13dp"
                android:paddingTop="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3.4"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="20dp"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:id="@+id/thirtysecond"
                    app:cardElevation="5dp"
                    android:backgroundTint="#fff">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:background="@drawable/selectedbackground"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:paddingBottom="3dp"
                            android:id="@+id/selectedthirtysecond"
                            android:visibility="invisible"
                            android:paddingTop="3dp"
                            android:textSize="10sp"
                            android:text="@string/select"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/purple_500"
                            android:background="#fff"
                            android:paddingTop="5dp"
                            android:src="@drawable/alarm"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/purple_500"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:text="@string/thirty"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.2">

                </View>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="20dp"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:id="@+id/viertelsecond"
                    app:cardElevation="5dp"
                    android:backgroundTint="#fff">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:background="@drawable/selectedbackground"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textSize="10sp"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:id="@+id/selectedviertelsecond"
                            android:visibility="visible"
                            android:text="@string/select"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/purple_500"
                            android:background="#fff"
                            android:paddingTop="5dp"
                            android:src="@drawable/alarm"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/purple_500"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:text="@string/viertel"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.2">

                </View>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="20dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:id="@+id/sixtysecond"
                    app:cardElevation="5dp"
                    android:backgroundTint="#fff">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:background="@drawable/selectedbackground"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textSize="10sp"
                            android:paddingBottom="3dp"
                            android:id="@+id/selectedsixtysecond"
                            android:paddingTop="3dp"
                            android:visibility="invisible"
                            android:text="@string/select"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/purple_500"
                            android:background="#fff"
                            android:paddingTop="5dp"
                            android:src="@drawable/alarm"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/purple_500"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:text="@string/sixty"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:id="@+id/start"
            android:layout_marginLeft="30dp"
            android:background="@drawable/startbacground"
            android:layout_marginTop="30dp"
            android:text="@string/start"
            android:textAlignment="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="20sp"
            android:textColor="@color/white"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>